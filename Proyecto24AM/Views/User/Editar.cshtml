@model Proyecto24AM.Models.Entities.User
@{
    ViewData["Title"] = "Usuarios";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar usuario</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Editar" method="post">


                    @*Id del articulo oculto*@

                    <input type="hidden" asp-for="PKUser" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingrese su nombre" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="lastName" class="control-label"></label>
                        <input asp-for="lastName" class="form-control" placeholder="Ingrese su apellido" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingrese su nombre de usuario" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingrese su contraseña" required />
                    </div>

                    <div class="form-group">
                        <label class="control-label"> Rol</label>
                        <select asp-for="FKRol" asp-items="ViewBag.Rols" class="select2-placeholder-multiple form-control">
                            <option value="">-- Selecciona --</option>
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>

                </form>

                <a asp-controller="User" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>